export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*"'export FZF_ALT_C_COMMAND='rg --hidden --sort-files --files --null 2> /dev/null | xargs -0 dirname | uniq'export FZF_COMPLETION_TRIGGER='ññ'export FZF_COMPLETION_OPTS='+c -x'export FZF_TMUX=1;export FZF_TMUX_HEIGHT='50%'# Use fd (https://github.com/sharkdp/fd) instead of the default find# command for listing path candidates.# - The first argument to the function ($1) is the base path to start traversal# - See the source code (completion.{bash,zsh}) for the details._fzf_compgen_path() {  fd --hidden --follow --exclude ".git" --exclude "node_modules" --exclude "vendor" . "$1"}_fzf_compgen_dir() {  fd --type d --hidden --follow --exclude ".git" --exclude "node_modules" --exclude "vendor" . "$1"}[[ -f "$HOME/.fzf.zsh" ]] && source "$HOME/.fzf.zsh"